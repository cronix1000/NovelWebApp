@model NovelWebApp.Models.Chapter
@{
    ViewData["Title"] = "Create";
}
<!-- Include stylesheet -->
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<h1>Create</h1>

<h4>Chapter</h4>
<hr />
<div class="row">

    <form asp-action="Create">

        <div class="form-group">
            <label hidden asp-for="NovelId" class="control-label" sp-items="ViewBag.NovelId">Novel Story</label>
            <select hidden type="hidden" asp-for="NovelId" class="form-control" asp-items="ViewBag.NovelId">
            </select>
        </div>

        <div class="col-md-10">
            <div class="form-group">
                <h3> <label asp-for="Title" class="control-label"></label></h3>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group col-md-2">
            <h3>
                <label asp-for="ChapterNumber" class="control-label"></label>
            </h3>
            <input asp-for="ChapterNumber" class="form-control" />
            <span asp-validation-for="ChapterNumber" class="text-danger"></span>
        </div>


        <div class="col-md-10">
            <div class="form-group form-group-lg">
                <div class="form-group">
                    <div class="editor-container">
                            <label asp-for="chapterStory" class="control-label"></label>
                            <textarea id="editor" asp-for="chapterStory" class="form-control"></textarea>
                            <span asp-validation-for="chapterStory" class="text-danger"></span>
                    </div>
                </div>
        </div>
            </div>
            <!-- Include the Quill library -->
            <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
            <script>
                var quill = new Quill('#editor', {
                    theme: 'snow'
                });

            </script>
            <div class="form-group py-3">
                <input type="submit" value="Create" class="btn btn-primary " />
            </div>
    </form>
</div>


<div>
    <a asp-controller="Novels" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
